<!DOCTYPE html>
<html>
    <head>
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
        <title>Address Book</title>
    </head>
    <body>
        <div class="container">
            <h1>Address Book</h1>
            <div class="row">
                <div class="col-sm-6">
                    <h2>Add a New Contact</h2>
                    <form action="/addContact" method="post">
                        <div class="form-group">
                            <input class="form-control" name="name" id="name" type="text" placeholder="Full name">
                        </div>
                        <div class="form-group">
                            <input class="form-control" name="number" id="number" type="number" placeholder="Phone number">
                        </div>
                        <div class="form-group">
                            <input class="form-control" name="address" id="address" type="text" placeholder="Address">
                        </div>
                        <button type="submit" class="btn btn-default">Add!</button>
                    </form>
                </div>
                <div class="col-sm-6">
                    {% if contacts is not empty %}
                    <h2>Your Contacts</h2>
                    <ul>
                        {% for contact in contacts %}
                        <li>{{ contact.getName }}, {{ contact.getNumber }}, {{ contact.getAddress }}</li>
                        {% endfor %}
                    </ul>
                    <form action='/deleteContacts' method='post'>
                        <button class='btn btn-default' type='submit'>Clear List</button>
                    </form>
                    {% endif %}
                </div>
            </div>
        </div>
    </body>
</html>
